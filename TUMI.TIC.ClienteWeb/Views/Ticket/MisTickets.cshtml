@using TUMI.TIC.Modelo.Entidades
@model List<TUMI.TIC.Modelo.Entidades.TicketDerivado>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12 m-b-30">
        <!-- begin page title -->
        <div class="d-block d-sm-flex flex-nowrap align-items-center">
            <div class="page-title mb-2 mb-sm-0">
                <h1>Mantenimiento de Tickets</h1>
            </div>
            <div class="ml-auto d-flex align-items-center">
                <nav>
                    <ol class="breadcrumb p-0 m-b-0">
                        <li class="breadcrumb-item">
                            <a href="/Ticket/Index"><i class="ti ti-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            Ticket
                        </li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">Atención</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- end page title -->
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card card-statistics">
            <div class="card-body">

                <div class="datatable-wrapper table-responsive">
                    <table id="datatable" class="display compact table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>COD</th>
                                <th>COLABORADOR</th>
                                <th>FECHA</th>
                                <th>UNIDAD ORGÁNICA</th>
                                <th>SUB UNIDAD</th>
                                <th>CATEGORIA</th>
                                <th>SUB CATEGORIA</th>
                                <th>DERIVADO A</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (TicketDerivado item in Model)
                            {
                                <tr>
                                    <td>@item.CodigoTicket</td>
                                    <td>@item.ColaboradorRegistro</td>
                                    <td>@item.FechaRegistro</td>
                                    <td>@item.UnidadOrganica</td>
                                    <td>@item.SubUnidadOrganica</td>
                                    <td>@item.Categoria</td>
                                    <td>@item.SubCategoria</td>
                                    <td>@item.CodigoDerivado</td>
                                    <td>
                                        <a href="/Ticket/Atencion?id=@item.CodigoTicket" class="btn btn-icon btn-secondary"><i class="fa fa-pencil"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

